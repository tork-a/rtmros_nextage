<launch>
  <arg name="CORBAPORT" default="2809" />
  <arg name="HRPSYS_PY_NAME" default="nextage.py"/>
  <arg name="HRPSYS_PY_PKG" default="nextage_ros_bridge"/>
  <arg name="GUI" default='false' />
  <arg name="NAMESERVER" default="localhost" />
  <arg name="ROBOT_NAME" default="HiroNX(Robot)0" />
  <arg name="ROBOTCLIENT_ARG_OLDSTYLE"
       default="-ORBInitRef NameService=corbaloc:iiop:localhost:$(arg CORBAPORT)/NameService" />

 <include file="$(find hironx_ros_bridge)/launch/hironx_startup.launch" >
   <arg name="GUI" value="$(arg GUI)" />
   <arg name="LAUNCH_HRPSYSPY" value="false" />
   <arg name="REALTIME" value="false" />
   <arg name="corbaport" value="$(arg CORBAPORT)" />
  </include>

  <test type="test_nxopen_noros.py" pkg="$(arg HRPSYS_PY_PKG)" test-name="nxopen_noros"
        time-limit="1000" args="$(arg ROBOTCLIENT_ARG_OLDSTYLE)" />
  <test type="test_handlight.py" pkg="$(arg HRPSYS_PY_PKG)" test-name="test_nxo_handlight"
        time-limit="1000" args="$(arg ROBOTCLIENT_ARG_OLDSTYLE)" />
  <test type="test_gripper.py" pkg="$(arg HRPSYS_PY_PKG)" test-name="test_nxo_gripper"
        time-limit="1000" args="$(arg ROBOTCLIENT_ARG_OLDSTYLE)" />
  <test type="test_airhand.py" pkg="$(arg HRPSYS_PY_PKG)" test-name="test_nxo_airhand"
        time-limit="1000" args="$(arg ROBOTCLIENT_ARG_OLDSTYLE)" />
</launch>
